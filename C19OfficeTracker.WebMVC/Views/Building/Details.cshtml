@model C19OfficeTracker.Models.BuildingDetail

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Building Detail</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.BuildingId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BuildingId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BuildingName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BuildingName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.City)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.State)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.State)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Postal)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Postal)
        </dd>

    </dl>
</div>
<hr />
<h4>Departments in Building</h4>
<hr />
@if (Model.Departments.Count == 0)
{
    <text><strong>There are ZERO Departments in this Building.</strong></text>
}
else
{
    <ul>
        @foreach (var department in Model.Departments)
        {
            <li><strong> @department.DeptName</strong></li>
        }
    </ul>
}
<hr />
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.BuildingId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
