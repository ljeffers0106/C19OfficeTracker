@model IEnumerable<C19OfficeTracker.Models.EmployeeListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (TempData.ContainsKey("SaveResult"))
{
<div class="alert alert-success fade in" role="alert">
    
    <button type="button" class="close" data-dismiss="alert">
        <span>&times;</span>
    </button>
    @TempData["SaveResult"]
</div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TypeOfPosition)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeptId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.FullName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Phone)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Gender)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TypeOfPosition)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DeptId)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.EmpId }) |
        @Html.ActionLink("Details", "Details", new { id = item.EmpId }) 
    </td>
</tr>
}

</table>
