@model IEnumerable<C19OfficeTracker.Models.TrackingListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Tracking Index</h2>
<hr />

<p>
    @Html.ActionLink("Add Today", "Create")
</p>
<!--  This is a successful result -->
@if (TempData.ContainsKey("SaveResult1"))
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult1"]

    </div>
}
<!--  This is a negative result -->
@if (TempData.ContainsKey("SaveResult2"))
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult2"]

    </div>
}
<!--  This is a information result -->
@if (TempData.ContainsKey("SaveResult3"))
{
    <div class="alert alert-info" role="alert">
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult3"]

    </div>
}
<table class="table table-striped table-bordered">

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TrackDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SymptomAnswer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactAnswer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TempAnswer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Temperature)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TrackDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SymptomAnswer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactAnswer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TempAnswer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Temperature)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.TrackingId }) |
                @Html.ActionLink("Details", "Details", new { id = item.TrackingId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.TrackingId })
            </td>
        </tr>
    }

</table>
